{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "lib/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "jsx": "react",
    "reactNamespace": "JSX"
  }
}
